{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "../../src/**/*.ts",
    "../../src/**/*.d.ts",
    "../../src/**/*.spec.ts",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "../../node_modules",
    "../../dist",
    "../../coverage",
    "../../*.js",
  ]
}
